<?xml version="1.0"?>
<config>
    <modules>
        <MageProfis_StaticProduct>
            <version>1.0.0.0</version>
        </MageProfis_StaticProduct>
    </modules>

    <global>
        <blocks>
            <mpstaticproduct>
                <class>MageProfis_StaticProduct_Block</class>
            </mpstaticproduct>
        </blocks>
        <helpers>
            <mpstaticproduct>
                <class>MageProfis_StaticProduct_Helper</class>
            </mpstaticproduct>
        </helpers>
        <models>
            <mpstaticproduct>
                <class>MageProfis_StaticProduct_Model</class>
                <resourceModel>mpstaticproduct_resource</resourceModel>
            </mpstaticproduct>
            <mpstaticproduct_resource>
                <class>MageProfis_StaticProduct_Model_Resource</class>
                <entities>
                    <cache>
                        <table>mpstaticproduct_cache</table>
                    </cache>
                </entities>
            </mpstaticproduct_resource>
        </models>
        <resources>
            <mpstaticproduct_setup>
                <setup>
                    <module>MageProfis_StaticProduct</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
            </mpstaticproduct_setup>
        </resources>
        <events>
            <catalog_product_save_after>
                <observers>
                    <mpstaticproduct>
                        <type>singleton</type>
                        <class>mpstaticproduct/observer</class>
                        <method>onProductSaveAfter</method>
                    </mpstaticproduct>
                </observers>
            </catalog_product_save_after>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <mpstaticproduct>
                    <file>mpstaticproduct.xml</file>
                </mpstaticproduct>
            </updates>
        </layout>
        <events>
            <controller_action_postdispatch_catalog_product_view>
                <observers>
                    <mpstaticproduct>
                        <type>singleton</type>
                        <class>mpstaticproduct/observer</class>
                        <method>onProductViewPostDispatch</method>
                    </mpstaticproduct>
                </observers>
            </controller_action_postdispatch_catalog_product_view>
        </events>
        <routers>
            <mpstaticproduct>
                <use>standard</use>
                <args>
                    <module>MageProfis_StaticProduct</module>
                    <frontName>mpstaticproduct</frontName>
                </args>
            </mpstaticproduct>
        </routers>
    </frontend>
</config>
